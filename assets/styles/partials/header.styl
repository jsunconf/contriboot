.main-header
  font-size: 1rem

  position: relative
  display: flex
  flex-direction: column
  align-items: center

  width: 100%
  margin-bottom: emCalc(400)

  @media $mediaQueryBig
    width: 50%
    align-self: flex-start
    margin-bottom: emCalc(80)

  &:before
    content: ''

    position: absolute
    top: calc(100% + 20px)
    right: emCalc(-30)

    width: 150%
    height: emCalc(600px)

    background-image: url('../images/keyvisual.jpg')
    background-size: contain
    background-repeat: no-repeat
    background-position: right

    z-index: -1

    @media $mediaQuerySmall
      top: calc(100% + 50px)

    @media $mediaQueryBig
      top: emCalc(70)
      right: calc(-100% - 30px)
      height: emCalc(760px)

  &__logo
    font-size: 1rem
    height: emCalc(160)
    width: 100%
    margin-bottom: emCalc(45)
    &__image
      max-width: emCalc(160)
      max-height: emCalc(160)

  &__title
    font-size: emCalc(24)
    font-weight: 300
    margin-bottom: emCalc(18, 18)

    @media $mediaQuerySmall
      font-size: emCalc(18)

  &__tagline
    font-size: remCalc(56)

    margin: 0

    max-width: emCalc(450, 56)

    font-weight: 100
    text-transform: uppercase
    text-align: center

  span
    font-weight: 800
