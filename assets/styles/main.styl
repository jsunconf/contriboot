fieldset
  border: none
  margin-bottom: 1.25em

input,
textarea
  outline: none

input[type="text"],
textarea
  padding: 1em .6em
  font-size: 1rem
  display: block
  width: 100%
  border: none

textarea
  height: 6em

.contriboot
  width: 100%
  &__header
    max-width: 480px
    margin: 1em auto
    text-align: center

.submit-form
  max-width: 480px
  margin: 1em auto
  &__header
    display: block
    text-align: center

  & input[type="radio"]
    display:none

  & input[type="radio"] + label
    background-color:#999
    box-shadow: 2px 2px 0px 2px #777
    padding:4px 11px
    font-family:Arial
    font-size:16px
    cursor: pointer
    margin-right: 10px
    padding-bottom: 0

  & input[type="radio"]:checked + label
    background-color: #0069b4
    box-shadow: 2px 2px 0px 2px #004b9f

.entries-container
  display: flex
  flex-wrap: nowrap
  justify-content: center
  width: 100%
  @media (min-width: 50em)
    flex-wrap: wrap
.entries
  width: 100%
  max-width: 50em
  margin: 2em
  flex-grow: 1
  flex-shrink: 1
  @media (min-width: 50em)
    width: 50%

.entry
  margin-bottom: 40px

  &__header
    display: flex
    justify-content: space-between
    align-items: baseline

    &__title
      width: 100%
      h3
        font-size: 1.75em
        margin: 0
      small
        font-size: .5em
        margin-left: 1em

    &__votes
      display: flex
      align-items: center
      width: 4em
      flex-shrink: 0
      padding-left: 15px

      &__button
        margin-right: 5px
        color: #0069b4
        background: none
        border: none
        font-size: 26px
        cursor: pointer

  &__description
    padding: 10px 75px 0 10px
    &--hidden
      display: none

.user
  display: flex
  justify-content: space-between
  align-items: baseline

  &__message
    display: inline-block
    margin-right: 10px

  &__button-login,
  &__button-logout
    cursor: pointer
    box-shadow: 2px 2px 0px 2px #004b9f
    padding: 4px 11px
